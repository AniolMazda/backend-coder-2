<main class="flex flex-col items-center pt-10 pb-10 min-h-screen">
    <h1 class="text-gray-800 text-4xl font-bold w-full pl-8 mb-6">Register</h1>
    <section class="mt-4 p-6 rounded shadow-lg bg-gray-200 w-full max-w-md">
        <form class="flex flex-col space-y-4">
            <div>
                <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Full Name:</label>
                <input type="text" id="name" name="name" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <div>
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email:</label>
                <input type="email" id="email" name="email" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <div>
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                <input type="password" id="password" name="password" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <div>
                <label for="city" class="block text-gray-700 text-sm font-bold mb-2">City:</label>
                <input type="text" id="city" name="city" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <div>
                <label for="date" class="block text-gray-700 text-sm font-bold mb-2">Date:</label>
                <input type="date" id="date" name="date" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <div>
                <label for="avatar" class="block text-gray-700 text-sm font-bold mb-2">Avatar URL:</label>
                <input type="text" id="avatar" name="avatar" class="shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 focus:bg-white transition">
            </div>
            <input type="button" id="register" value="Register" class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition">
        </form>
    </section>
</main>
<script src="./js/register.js"></script>