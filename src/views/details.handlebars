<main class="pt-10 flex justify-center pb-10">
    <div class="shadow-lg bg-gray-100 text-gray-800 w-3/4 flex flex-row">
    {{#with product}}
        <section class="w-1/2">
            <img class="w-full" src="{{image}}" alt="{{title}}">
        </section>
        <section class="w-1/2 overflow-hidden px-6 py-6">
            <div class="flex flex-row mb-4 justify-start items-center w-fit">
                <h1 class="text-gray-800 text-4xl font-bold w-full">{{title}}</h1>
                <span class="inline-block rounded bg-gray-700 px-3 py-1 text-sm font-semibold text-gray-200 ml-2">{{category}}</span>
            </div>
            <p class="text-gray-600 text-base mb-4">{{description}}</p>
            <div>
                <span class="inline-block bg-gray-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">${{price}}</span>
                <button class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Add to Cart</button>
            </div>
        </section>
    {{/with}}
    </div>
</main>