<main class="flex flex-col items-center pt-10 pb-10">
    <h1 class="text-gray-800 text-4xl font-bold w-full pl-8">Products</h1>
    <section class="mt-8">
        <ul class="grid grid-cols-3 gap-5">
            {{#each products}}
            <li>
                <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gray-200 text-gray-800">
                    <img class="w-full" src="{{this.image}}" alt="{{this.title}}">
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2 text-gray-700">{{this.title}}</div>
                        <p class="text-gray-600 text-base description-resume">
                        {{this.description}}
                        </p>
                    </div>
                    <div class="px-6 pt-4 pb-2">
                        <span class="inline-block bg-gray-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">${{this.price}}</span>
                        <span class="inline-block bg-gray-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Stock: {{this.stock}}</span>
                        <button class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition">
                            <a href="/details/{{this._id}}">Ver Detalles</a>
                        </button>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </section>
</main>
<script src="/js/index.js"></script>